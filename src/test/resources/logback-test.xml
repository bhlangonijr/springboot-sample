<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%p]:%logger{15}:%L:%M:%m%n</pattern>
        </encoder>
    </appender>
    <logger name="net.layered.messaging" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
